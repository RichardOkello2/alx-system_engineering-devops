#!/bin/bash

function audit_subdomain {
  subdomain=$1
  domain=$2
  dig_output=$(dig $subdomain.$domain | awk '/ANSWER SECTION:/,0')
  record_type=$(echo "$dig_output" | awk '/IN\s[A-Z]+\s/ {print $2}')
  destination=$(echo "$dig_output" | awk '/IN\sA\s/ {print $5}')
  echo "The subdomain $subdomain is a $record_type record and points to $destination"
}

domain=$1
subdomain=$2

if [ -z "$subdomain" ]; then
  audit_subdomain www $domain
  audit_subdomain lb-01 $domain
  audit_subdomain web-01 $domain
  audit_subdomain web-02 $domain
else
  audit_subdomain $subdomain $domain
fi
